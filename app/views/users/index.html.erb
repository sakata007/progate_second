

<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">ユーザー一覧</h1>
    <!-- 以下の<% %>を使ってeach文を追加してください -->
    <% @users.each do |user| %>        
      <div class="users-index-item">
      <!-- 画像表示実装　-->
      <div class="user-left">
        <img src="<%= "/user_images/#{user.image_name}"%>">
          
        </div>
        <div class="user-right">
          <!-- 以下の<%= %>を使ってユーザー名を表示してください -->
          <%= link_to(user.name,"/users/#{user.id}") %>


        <!-- フォロー機能 -->
      <% if @current_user != user %>
        <% if @current_user.following?(user) %>
            <p><%=button_to "フォロー解除", user_relationships_path(user.id), method: :delete %></p>
        <% else %>
            <p><%=button_to "フォローする", user_relationships_path(user.id) %></p>
        <% end %>
      <% end %>

        </div>
      </div>
    <!-- 以下の<% %>を使ってeach文のendを追加してください -->
    <% end %>
  </div>
</div>
