<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <div class="form users-form">
      <div class="form-body">
      <% @user.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
        <p>ユーザー名</p>
        <%= form_tag("/users/create") do %>
        <!-- <input>タグを用いて1行の入力フォームを作成してください -->
        <input name="name" value="<%= params[:name] %>"> 
        
        <p>メールアドレス</p>
        <!-- <input>タグを用いて1行の入力フォームを作成してください -->
        <input name="email" value="<%= params[:email] %>"> 

        <p>パスワード</p>
        <!-- <input>タグを用いて1行の入力フォームを作成してください -->
        <input name="password" type="password" value="<%= params[:password] %>"> 
        
        <input type="submit" value="新規登録">
        <% end %>
      </div>
    </div>
  </div>
</div>