<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <!-- ユーザーの画像が表示されるように、以下のsrcに値を追加してください -->

        </div>
        <div class="post-right">
          <div class="post-user-name">
            <!-- 下記の行でエラー発生 -->
            <%= link_to(post.user, "/users/#{post.user}")%>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %> 
          <i class="far fa-clock clock-icon"></i><%= time_ago_in_words(post.created_at) %>前
          <!-- いいね数カウントのため追記 post.user.id -->
          <% if Like.find_by(user_id:post.user, post_id:post.id) %>
            <%= button_to "/likes/#{post.id}/destroy" do %>
              <span class="fa fa-heart liked-btn"></span>
            <% end %>
          <% else %>
            <%= button_to "/likes/#{post.id}/create" do %>
            <span class="fa fa-heart liked-btn"></span>
          <% end %>

          <%= @likes_count%>

        <% end %>
        </div>
      </div>

    <% end %>
  </div>
</div>